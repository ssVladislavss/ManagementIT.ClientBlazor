@page "/"
@using Microsoft.AspNetCore.Authentication
@namespace UIBlazor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
    var AccessToken = await HttpContext.GetTokenAsync("access_token");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UIBlazor</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="UIBlazor.styles.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</head>
<body>

<app>
    <component type="typeof(App)" param-AccessToken="AccessToken" render-mode="ServerPrerendered" />
</app>
   
   <div id="blazor-error-ui">
       <environment include="Staging,Production">
           An error has occurred. This application may no longer respond until reloaded.
       </environment>
       <environment include="Development">
           An unhandled exception has occurred. See browser dev tools for details.
       </environment>
       <a href="" class="reload">Reload</a>
       <a class="dismiss">🗙</a>
   </div>

<script src="_framework/blazor.server.js"></script>
@* Подключил скрипт для MudBlazor *@
<script src="_content/MudBlazor/MudBlazor.min.js"></script>

</body>
</html>